{
  "name": "@pdfme/schemas",
  "version": "0.0.0",
  "type": "module",
  "sideEffects": false,
  "author": "hand-dot",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "pdf",
    "pdf-generation",
    "pdf-designer",
    "pdf-viewer",
    "typescript",
    "react"
  ],
  "description": "TypeScript base PDF generator and React base UI. Open source, developed by the community, and completely free to use under the MIT license!",
  "homepage": "https://pdfme.com",
  "repository": {
    "type": "git",
    "url": "git@github.com:pdfme/pdfme.git"
  },
  "bugs": {
    "url": "https://github.com/pdfme/pdfme/issues"
  },
  "main": "dist/cjs/src/index.js",
  "module": "dist/esm/src/index.js",
  "types": "dist/types/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/src/index.d.ts",
      "import": "./dist/esm/src/index.js",
      "default": "./dist/esm/src/index.js"
    },
    "./utils": {
      "types": "./dist/types/src/utils.d.ts",
      "import": "./dist/esm/src/utils.js",
      "default": "./dist/esm/src/utils.js"
    }
  },
  "scripts": {
    "dev": "tsc -p tsconfig.esm.json -w",
    "build": "npm-run-all --parallel build:esm build:node",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:node": "tsc -p tsconfig.node.json",
    "clean": "rimraf dist",
    "lint": "eslint --ext .ts src --config eslint.config.mjs",
    "test": "jest",
    "prune": "ts-prune src",
    "prettier": "prettier --write 'src/**/*.ts'"
  },
  "dependencies": {
    "@pdfme/pdf-lib": "*",
    "air-datepicker": "^3.5.3",
    "bwip-js": "^4.6.0",
    "date-fns": "^4.1.0",
    "fontkit": "^2.0.2",
    "lucide": "^0.507.0"
  },
  "devDependencies": {
    "@pdfme/common": "*",
    "@types/bwip-js": "^3.2.1",
    "@types/fontkit": "^2.0.8",
    "@types/pngjs": "^6.0.2",
    "jsqr": "^1.4.0",
    "pngjs": "^7.0.0"
  },
  "peerDependencies": {
    "@pdfme/common": "latest"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1",
      "^@pdfme/pdf-lib$": "@pdfme/pdf-lib",
      "^@pdfme/schemas/utils$": "<rootDir>/../schemas/src/utils",
      "^@pdfme/(.*)$": "<rootDir>/../$1/src"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!@pdfme|lucide-react)/"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
