{
  "name": "@pdfme/converter",
  "version": "0.0.0",
  "sideEffects": false,
  "author": "hand-dot",
  "license": "MIT",
  "keywords": [
    "pdf",
    "pdf-generation",
    "pdf-designer",
    "pdf-viewer",
    "typescript",
    "react"
  ],
  "description": "TypeScript base PDF generator and React base UI. Open source, developed by the community, and completely free to use under the MIT license!",
  "homepage": "https://pdfme.com",
  "repository": {
    "type": "git",
    "url": "git@github.com:pdfme/pdfme.git"
  },
  "bugs": {
    "url": "https://github.com/pdfme/pdfme/issues"
  },
  "type": "module",
  "main": "./dist/esm/index.browser.js",
  "module": "./dist/esm/index.browser.js",
  "types": "./src/index.d.ts",
  "exports": {
    ".": {
      "browser": "./dist/esm/index.browser.js",
      "node": "./dist/esm/index.node.js",
      "import": "./dist/esm/index.browser.js",
      "types": "./src/index.d.ts"
    }
  },
  "scripts": {
    "dev": "tsc -p tsconfig.esm.json -w",
    "build": "tsc -p tsconfig.esm.json",
    "clean": "rimraf dist",
    "lint": "eslint --ext .ts src --config eslint.config.mjs",
    "test": "node --experimental-vm-modules node_modules/.bin/jest",
    "prune": "ts-prune src",
    "prettier": "prettier --write 'src/**/*.ts'"
  },
  "dependencies": {
    "@pdfme/common": "*",
    "@pdfme/pdf-lib": "*",
    "pdfjs-dist": "^5.2.133"
  },
  "devDependencies": {
    "@pdfme/generator": "*",
    "@types/estree": "^1.0.6",
    "canvas": "^2.11.2"
  },
  "optionalDependencies": {
    "canvas": "^2.11.0"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "extensionsToTreatAsEsm": [".ts", ".tsx"],
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "transform": {
      "^.+\\.ts?$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.esm.json",
          "useESM": true
        }
      ]
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "testMatch": [
      "**/*.test.ts"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
