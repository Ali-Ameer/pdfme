{
  "name": "@pdfme/manipulator",
  "version": "0.0.0",
  "type": "module",
  "sideEffects": false,
  "author": "hand-dot",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "pdf",
    "pdf-generation",
    "pdf-designer",
    "pdf-viewer",
    "typescript",
    "react"
  ],
  "description": "TypeScript base PDF generator and React base UI. Open source, developed by the community, and completely free to use under the MIT license!",
  "homepage": "https://pdfme.com",
  "repository": {
    "type": "git",
    "url": "git@github.com:pdfme/pdfme.git"
  },
  "bugs": {
    "url": "https://github.com/pdfme/pdfme/issues"
  },
  "main": "dist/cjs/src/index.js",
  "module": "dist/esm/src/index.js",
  "types": "dist/types/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/src/index.d.ts",
      "import": "./dist/esm/src/index.js",
      "default": "./dist/esm/src/index.js"
    }
  },
  "scripts": {
    "dev": "tsc -p tsconfig.esm.json -w",
    "build": "npm-run-all --parallel build:esm",
    "build:esm": "tsc -p tsconfig.esm.json",
    "clean": "rimraf dist",
    "lint": "eslint --ext .ts src --config eslint.config.mjs",
    "test": "jest",
    "test:update-snapshots": "jest --updateSnapshot",
    "prune": "ts-prune src",
    "prettier": "prettier --write 'src/**/*.ts'"
  },
  "dependencies": {
    "@pdfme/pdf-lib": "*"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@pdfme/converter": "*",
    "@types/estree": "^1.0.6"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1",
      "^@pdfme/pdf-lib$": "@pdfme/pdf-lib",
      "^@pdfme/schemas/utils$": "<rootDir>/../schemas/src/utils",
      "^@pdfme/(.*)$": "<rootDir>/../$1/src"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!@pdfme|lucide-react)/"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/test-setup.js"
    ]
  }
}
