{
  "name": "@pdfme/common",
  "version": "0.0.0",
  "sideEffects": false,
  "author": "hand-dot",
  "license": "MIT",
  "keywords": [
    "pdf",
    "pdf-generation",
    "pdf-designer",
    "pdf-viewer",
    "typescript",
    "react"
  ],
  "description": "TypeScript base PDF generator and React base UI. Open source, developed by the community, and completely free to use under the MIT license!",
  "homepage": "https://pdfme.com",
  "repository": {
    "type": "git",
    "url": "git@github.com:pdfme/pdfme.git"
  },
  "bugs": {
    "url": "https://github.com/pdfme/pdfme/issues"
  },
  "type": "module",
  "main": "dist/esm/src/index.js",
  "types": "dist/types/src/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/src/index.js",
      "types": "./dist/types/src/index.d.ts"
    }
  },
  "scripts": {
    "dev": "node set-version.js && tsc -p tsconfig.esm.json -w",
    "prebuild": "node set-version.js",
    "build": "npm-run-all --parallel build:esm build:node",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:node": "tsc -p tsconfig.node.json",
    "clean": "rimraf dist",
    "lint": "eslint --ext .ts src --config eslint.config.mjs",
    "test": "node --experimental-vm-modules node_modules/.bin/jest",
    "prune": "ts-prune src",
    "prettier": "prettier --write 'src/**/*.ts'"
  },
  "dependencies": {
    "@pdfme/pdf-lib": "*",
    "acorn": "^8.14.0",
    "buffer": "^6.0.3",
    "zod": "^3.24.4"
  },
  "peerDependencies": {
    "antd": "^5.11.2",
    "form-render": "^2.2.20"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "extensionsToTreatAsEsm": [".ts", ".tsx", ".js"],
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "transform": {
      "^.+\\.(ts|js)?$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.esm.json",
          "useESM": true
        }
      ]
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "testMatch": [
      "**/*.test.ts",
      "**/*.test.js"
    ],
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "./jest.setup.js"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/estree": "^1.0.6"
  }
}
